<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreatmentDetails">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/Lgreen"


        android:orientation="horizontal"
        android:padding="15dp"
        app:flow_horizontalAlign="start"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|left"
            android:contentDescription="@string/menue_b"
            android:onClick="btnClick"
            app:srcCompat="@drawable/hut" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Lgreen" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:contentDescription="@string/profile_p"
            android:onClick="profileClick"
            app:srcCompat="@drawable/ellipse_14__2_" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="368dp"
        android:layout_height="598dp"
        android:layout_margin="20dp"
        android:background="@drawable/corners"
        android:elevation="10dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.551">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="55dp"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/field_name"
                android:layout_width="256dp"

                android:layout_height="74dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/inter_bold"
                android:paddingTop="8dp"
                android:text="@string/treatment"
                android:textAlignment="center"
                android:textColor="@color/Dgreen"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="58dp"

                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:onClick="btnClick"
                app:srcCompat="@drawable/macos_close__1_" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="@font/inter_bold"
                android:text="@string/pest"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pest"
                android:layout_width="182dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="@font/inter_bold"
                android:text="@string/level"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/level"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="@font/inter_bold"
                android:text="@string/date"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="155dp"
                android:layout_height="match_parent"

                android:fontFamily="@font/inter_bold"
                android:text="@string/treatment"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/productBtn"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/green_shape"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/procced"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.247">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/rectangle_340" />

            <TextView
                android:id="@+id/treatment"
                android:padding="10dp"
                android:layout_width="204dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/treatment"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="282dp"
            android:layout_height="198dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/inter_bold"
                android:text="@string/descp"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/descp"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/descp"
                android:textColor="@color/Dgreen"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_width="414dp"
        android:layout_height="87dp"
        android:layout_marginBottom="-20dp"
        android:background="@color/white"
        app:flow_verticalAlign="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.753">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/bottom_nav"
            app:menu="@menu/bottomnav">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
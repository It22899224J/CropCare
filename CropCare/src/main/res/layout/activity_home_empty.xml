<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/Lgreen"

                android:onClick="profileClick"
                android:orientation="horizontal"
                android:padding="15dp"
                app:flow_horizontalAlign="start"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|left"
                    android:contentDescription="@string/menue_b"
                    android:onClick="profileClick"
                    app:srcCompat="@drawable/hut" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Lgreen" />

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0"
                    android:contentDescription="@string/profile_p"
                    android:onClick="profileClick"
                    app:srcCompat="@drawable/ellipse_14__2_" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view"
                android:layout_width="411dp"
                android:layout_height="214dp"
                android:background="@color/Lgreen"
                android:duplicateParentState="true"
                android:orientation="vertical"
                android:paddingLeft="25dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="344dp"
                    android:layout_height="96dp"

                    android:fontFamily="@font/inter_bold"
                    android:text="Explore the perfect products."
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.289" />

                <Button
                    android:id="@+id/find"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/Dgreen"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/h_button"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.11"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="443dp"
                app:srcCompat="@drawable/rectangle_353" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bottom_nav"
                app:menu="@menu/bottomnav">


            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </LinearLayout>


    </androidx.drawerlayout.widget.DrawerLayout>
</androidx.constraintlayout.widget.ConstraintLayout>